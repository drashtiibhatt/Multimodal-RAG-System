[run]
# Source code directories
source = src

# Omit these files/directories from coverage
omit =
    */tests/*
    */test_*.py
    */__pycache__/*
    */site-packages/*
    */venv/*
    */env/*
    setup.py
    */config.py
    */__init__.py

# Branch coverage
branch = True

# Parallel mode for faster execution
parallel = True

[report]
# Precision for coverage percentages
precision = 2

# Show missing line numbers
show_missing = True

# Skip empty files
skip_empty = True

# Exclude lines from coverage (pragmas)
exclude_lines =
    # Standard pragma
    pragma: no cover

    # Don't complain about missing debug code
    def __repr__
    def __str__

    # Don't complain if tests don't hit defensive assertion code
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    if typing.TYPE_CHECKING:

    # Don't complain about abstract methods
    @abstract
    @abstractmethod

    # Don't complain about protocol methods
    @Protocol
    ...

# Sort by coverage percentage (least covered first)
sort = Cover

[html]
# Directory for HTML coverage report
directory = htmlcov

# Title for HTML report
title = Multimodal RAG System - Coverage Report

[xml]
# Output file for XML coverage report (for CI/CD)
output = coverage.xml

[json]
# Output file for JSON coverage report
output = coverage.json
# Pretty print JSON
pretty_print = True
show_contexts = True
