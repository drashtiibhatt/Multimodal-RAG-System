# OpenAI Configuration (Primary)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Model Configuration
LLM_PROVIDER=openai  # "openai" or "ollama"
LLM_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small
TEMPERATURE=0.3

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2  # or mistral, codellama, etc.

# Retrieval Configuration
TOP_K=5
MIN_CONFIDENCE=0.6

# Phase 2: Hybrid Retrieval Configuration
ENABLE_HYBRID_RETRIEVAL=false
VECTOR_WEIGHT=0.6
KEYWORD_WEIGHT=0.4
RRF_CONSTANT=60

# Chunking Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=150

# Image Processing Configuration
ENABLE_OCR=true
USE_VISION_API=false  # Use OpenAI Vision API instead of Tesseract
VISION_MODEL=gpt-4-vision-preview  # or gpt-4-turbo
TESSERACT_PATH=
POPPLER_PATH=
OCR_DPI=200
EXTRACT_PDF_IMAGES=false

# Guardrails
ENABLE_HALLUCINATION_CHECK=true
ENABLE_INJECTION_DETECTION=true
MIN_EVIDENCE_THRESHOLD=0.6

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_MODE=false
